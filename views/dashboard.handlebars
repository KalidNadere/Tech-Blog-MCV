
        <section class="user-posts">
            {{#each posts}}
                <article class="post">
                    <h2>{{this.title}}</h2>
                    <p>{{this.content}}</p>
                    <p>Posted by: {{this.User.username}}</p>

                    <div class="post-actions">
                        <button class="edit-post-btn" data-id="{{this.id}}">Edit</button>
                        <button class="delete-post-btn" data-id="{{this.id}}">Delete</button>
                    </div>
                </article>
            {{/each}}
        </section>
 

    <script src="/javascript/create-post.js"></script>
</body>
</html>
