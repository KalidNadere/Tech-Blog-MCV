<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <header>
        <nav>
            <a href="/dashboard" class="go-back">‚Üê Back to dashboard</a>
            <a href="/logout" class="logout-link">Logout</a>
        </nav>
    </header>

    <main class="dashboard-main">
        <section class="create-post-section">
            <h2>Create New Post</h2>
            <form class="new-post-form">
                <label for="post-title">Title:</label>
                <input type="text" id="post-title" name="post-title" required>
                
                <label for="post-content">Content:</label>
                <textarea id="post-content" name="post-content" required></textarea>
                
                <button type="submit" class="btn">Create</button>
            </form>
        </section>

        <section class="user-posts">
            {{#each posts}}
                <article class="post">
                    <h2>{{this.title}}</h2>
                    <p>{{this.content}}</p>
                    <p>Posted by: {{this.User.username}}</p>

                    <div class="post-actions">
                        <button class="edit-post-btn" data-id="{{this.id}}">Edit</button>
                        <button class="delete-post-btn" data-id="{{this.id}}">Delete</button>
                    </div>
                </article>
            {{/each}}
        </section>
    </main>

    <script src="/javascript/create-post.js"></script>
</body>
</html>
