<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, user-scalable=no' />
    <link
      rel='stylesheet'
      href='../../stylesheets/styles.css'
      type='text/css'
    />
    <link rel='icon' type='image/x-icon' href='/images/favicon.ico' />
    <title>Tech Blog</title>
  </head>
  <body>
    <div class='wrapper'>
      <header>
        <div id='header-head'>
          <h1 id='header-logo'>Tech Blog</h1>

          {{#if username}}
            <p id='loggedin'><span>Logged in as</span>
              <em style='font-weight: 800'>{{username}}</em></p>
          {{/if}}
        </div>
        <nav>
          <a class='navItem' href='/'>Home</a>
          <a class='navItem' href='/dashboard'>Dashboard</a>
         
          {{#if loggedIn}}
            <a class='navItem' id='logout'>Logout</a>
          {{else}}
            <a class='navItem' href='/login'>Login</a>
          {{/if}}
        </nav>

        <div id='bg'></div>
      </header>
      <main>
        {{{body}}}
      </main>
    </div>
  </body>
</html>
<script src='/js/main.js'></script>
{{#if loggedIn}}
  <script src='/js/logout.js'></script>
{{/if}}